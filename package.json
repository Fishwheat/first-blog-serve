{
  "name": "kohai-blog-be",
  "version": "1.0.0",
  "description": "The backend server of the kohai-blog.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development npm run nodemon:build",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "pm2": "cross-env NODE_ENV=production pm2 start dist/index.js --name=kohai-blog-be",
    "nodemon:build": "nodemon --exec ./node_modules/.bin/ts-node -r tsconfig-paths/register ./src/index.ts --files",
    "init-api-generator": "kohapi-generator init",
    "generate-api": "kohapi-generator yapi-hapi-ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "author": {
    "name": "kohai",
    "email": "i@kohai.top",
    "url": "https://kohai.top"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/hapi": "^20.1.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "dotenv": "^8.2.0",
    "hapi-swagger": "^14.1.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.2.5",
    "sequelize": "^6.5.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@kohapi/generator": "^0.0.1-alpha.6",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.5",
    "@types/hapi__joi": "^17.1.6",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.25",
    "@types/validator": "^13.1.3",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
